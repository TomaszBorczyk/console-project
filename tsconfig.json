{
  "compilerOptions": {
    "outDir": "./public",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}